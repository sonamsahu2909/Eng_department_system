<body>
    <section class="h-100 gradient-form" style="background-color: #9A616D;">
        <div class="container py-5 h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
              <div class="card rounded-3 text-black">
                <div class="row g-0">
                  <div class="col-lg-5 d-flex align-items-center gradient-custom-2 why">
                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp" width="100%" height="100%">
                  </div>
                  <div class="col-lg-7 ">
                    <div class="card-body p-md-5 mx-md-4">
      
                      <div class="text-center">
                        <img src="image/logo.png"
                          style="width: 185px;" alt="logo">
                        <h4 class="mt-1 mb-4 pb-1 "><b>Register Here</b></h4>
                      </div>
                      <% if(message.length > 0){ %>
                        <div class="alert alert-danger">
                            <%= message %>
                        </div>
                    <% } %>
      
                      <form action="/insert" enctype="multipart/form-data" method="post" onsubmit="return validation()">
                        <div class="form-outline mb-3">
                          <input name="name" type="type" id="user" class="form-control" placeholder="Full name" required>
                          <span id="username" class="text-danger"></span>
                        </div>
      
                        <div class="form-outline mb-3">
                          <input name="email" type="email" id="email" class="form-control" placeholder="Email" required>
                        </div>

                        <div class="form-outline mb-3">
                          <input name="password" type="password" id="pass" class="form-control" placeholder="password" required>
                          <span id="password" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                          <input name="cpassword" type="password" id="cpass" class="form-control" placeholder="Confirm password" required>
                          <span id="cpassword" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-3">
                          <input name="image" type="file" class="form-control">
                        </div>

                        <!-- <div class="form-outline mb-3 ps-2">
                          <input type="checkbox" id="checkbox" required>Show Password
                        </div> -->
      
                        <div class="d-flex align-items-center justify-content-center pb-4">
                          <button class="btn btn-outline-secondary" name="Register">Register here</button>
                          <p class="mb-0 me-2"> have an account?</p>
                          <a href="/">
                             <b class="mb-0 me-2 text-dark">LOGIN NOW</b>
                          </a>
                        </div>
      
                      </form>
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
